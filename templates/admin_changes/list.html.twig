{% extends 'base.html.twig' %}

{% block title %}
    Changes list
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-changes.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>
        const toggler = document.getElementsByClassName("caret");
        let i;

        for (i = 0; i < toggler.length; i++) {
            toggler[i].addEventListener("click", function() {
                this.parentElement.querySelector(".nested").classList.toggle("active");
                this.classList.toggle("caret-down");
            });
        }
    </script>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1></h1>
                <div class="show-article-container p-3 mt-2">
                    <div class="main-article mb-5 pb-3">
                        <h1 class="text-center mt-2">Changes list</h1>
                    </div>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Persons</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Events</a>
                        </li>

                    </ul>
                    <div class="tab-content" id="myTabContent">

                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            {{ include('admin_changes/_persons.html.twig') }}
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            {{ include('admin_changes/_events.html.twig') }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}
