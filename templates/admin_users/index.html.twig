{% extends 'base.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Users list</h1>
            {{ dump(users_list) }}
            <div class="show-article-container p-3 mt-2">
                <form method="post" action="{{path('users_update_roles') }}">
                    <table class="table table-striped advanced-table">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for user in users_list %}
                                <tr>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <div>
                                            <label for="{{ user.id }}_admin">Admin role</label>
                                            <input type="checkbox" id="{{ user.id }}_admin" name="{{ user.id }}_admin" {% if 'ROLE_ADMIN' in user.roles %} checked {% endif %}>
                                        </div>
                                        <div>
                                            <a href="{{ path('admin_users_edit', {id: user.id}) }}">edit</a>
                                            <label for="{{ user.id }}_manager">Manager role</label>
                                            <input type="checkbox" id="{{ user.id }}_manager" name="{{ user.id }}_manager" {% if 'ROLE_ACCEPT_CHANGES' in user.roles %} checked {% endif %}>
                                        </div>
                                    </td>

                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <input type="submit">
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
